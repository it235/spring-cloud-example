<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it235.cloud.example.mp.mapper.SysProvinceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.it235.cloud.example.mp.entity.SysProvince">
        <result column="id" property="id" />
        <result column="province_code" property="provinceCode" />
        <result column="province_name" property="provinceName" />
        <result column="short_name" property="shortName" />
        <result column="lng" property="lng" />
        <result column="lat" property="lat" />
        <result column="sort" property="sort" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="update_time" property="updateTime" />
        <result column="update_by" property="updateBy" />
        <result column="del_flag" property="delFlag" />
        <result column="delete_by" property="deleteBy" />
        <result column="delete_time" property="deleteTime" />
    </resultMap>

    <!-- 根据ID获取 -->
    <select id="getByIdXml" resultMap="BaseResultMap" parameterType="int">
        select * from sys_province where id = #{id}
    </select>

    <!--根据传入的Map参数获取数据-->
    <select id="getByMapXml" resultMap="BaseResultMap" parameterType="map">
        select * from sys_province
        <where>
            <if test="provinceCode != null">
                province_code = #{provinceCode}
            </if>
            <if test="provinceName != null">
                province_name = #{provinceName}
            </if>
        </where>
    </select>

</mapper>
